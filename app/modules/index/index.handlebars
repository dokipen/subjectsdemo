<div class="row-fluid">
  <div class="col-lg-4 col-lg-offset-4">
    <form class="form-search">
      <fieldset>
        <legend>See What People are Saying on Twitter</legend>
        {{view Ember.TextField valueBinding="subject" placeholder="subject" class="form-control"}}
        <p class="help-block">A twitter search term.</p>
        <button type="submit" class="btn btn-default" {{action 'startStream'}}>Follow</button>
      </fieldset>
    </form>
  </div>
</div>
